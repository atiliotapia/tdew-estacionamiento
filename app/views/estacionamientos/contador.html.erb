<h1>Ingresos y Salidas de Autos</h1>
<p>
  <div class="input">
    Seleccionar Local: 

    <select class="large" name="mediumSelect" id="mediumSelect">
      <% @estacionamientos.each do |estacionamiento|%>
      <option value="<%= estacionamiento.id %>"><%= estacionamiento.local %></option>
      <% end %>
    </select>
    <label id="lblId"></label>
  </div>
</p>

<div data-role="navbar">
	<ul>   
		<li><%= link_to "Ingreso", estacionamientos_path+"/ingreso/1", "data-icon" => "forward" %></li>
		<li><%= link_to "Salida", estacionamientos_path+"/salida/1", "data-icon" => "back" %></li>
	</ul>
</div><!-- /navbar -->

<script>
    $("select").change(function () {          
          var str = "";
          $("select option:selected").each(function () {
                str = $(this).val() + " ";                                                
              });
          $("label").text(str);
        })
        .trigger('change');
</script>
